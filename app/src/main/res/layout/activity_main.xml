<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_view_ad_1a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ad Example #1-A"
            android:textSize="30sp"
            android:freezesText="true"
        />
        <LinearLayout
            android:id="@+id/ad_container1A"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@+id/text_view_ad_1a"
            android:gravity="bottom"
            android:orientation="vertical"
            />
        <TextView
            android:id="@+id/text_view_ad_1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_container1A"
           android:text="Ad Example #1-B"
           android:textSize="30sp"
           android:freezesText="true"
        />
        <LinearLayout
            android:id="@+id/ad_container1B"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_below="@+id/text_view_ad_1b"
            android:gravity="bottom"
            android:orientation="vertical"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="jump" />

</LinearLayout>
